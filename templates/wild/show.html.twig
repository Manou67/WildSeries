{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}
{% block stylesheet %}{% endblock %}
{% block body %}
<section id="showPage">
    <div>
        <div class = "programInfo">
            <img class="poster" src="{{program.poster}}" alt="{{ program.title }} poster">
                <h1>{{ program.title }}</h1>
                <p>{{ program.summary }}</p>
                <p>Categorie : {{ program.category.name }}</p>
        </div>
    </div>
    <div>
        <section id="seasons">
            {% set i = 0 %}
            {% for season in seasons %}
                {% set i = i + 1 %}
                <a class="season" href="../season/{{ program.id }}-{{ season.id }}">
                    <h4>Season {{ i }}</h4>
                </a>
            {% endfor %}
        </section>
    </div>
    <strong>Acteur :</strong>
    <ul>
        {% for actor in program.actors %}
            <li><a href="{{ path('wild_actor',{"name" : actor.name | lower | replace({" " : "-"})}) }}">{{ actor.name }}</a> </li>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>
</section>
{% endblock %}
